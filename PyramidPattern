public class PyramidPattern {

	public static void main(String[] args) {
		System.out.println("Star Pyramid Pattern: "); 
		drawStarPattern();
	}
	public static void drawStarPattern() 
	{ 
		for (int i = 0; i < 10; i++) 
			{ 
				for (int j = 0; j < 10 - i; j++) 
					{ 
						System.out.print(" "); 
					} 
				for (int k = 0; k <= i; k++) 
					{ 
					System.out.print("* "); 
					} 
					System.out.println(); 
			} 
	}
}
